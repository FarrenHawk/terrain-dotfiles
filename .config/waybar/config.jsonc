        "format-icons": {
            "activated": "Û∞õê",
            "deactivated": "Û∞õë"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        // "timezone": "America/New_York",
	"interval": 1,
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%H:%M:%S %Y-%m-%d}"
    },
    "group/system":{
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "temperature",
            "memory"
        ]
    },
    "cpu": {
        "format": "{usage}% Û∞äö",
	"interval": 10,
        "tooltip": false,
	"on-click": "kitty btop"
    },
    "memory": {
	"interval": 10,
        "format": "{}% Û∞çõ",
	"on-click": "kitty btop"
    },
    "temperature": {
	"interval": 10,
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}¬∞C Û∞Ä¶",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Û±ÉÉ", "Û±ÉÇ"]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Û∞Éö", "Û∞Éõ", "Û∞Éú", "Û∞Éù", "Û∞Éû", "Û∞Éü", "Û∞É†"],
        "on-click": "hyprshade on red",
        "on-click-right": "hyprshade off",
        "on-scroll-up": "brightnessctl s 5%+",
        "on-scroll-down": "brightnessctl s 5%-"
    },
    "group/connectivity":{
        "orientation": "horizontal",
        "modules": [
            "bluetooth",
            "network"
        ]
    },
    "bluetooth": {
	"format": "Û∞ÇØ",
